<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <import type="com.krisbiketeam.smarthomeraspbpi3.utils.UtilsKt" />

        <import type="com.krisbiketeam.smarthomeraspbpi3.common.storage.firebaseTables.HomeUnitType" />

        <variable
            name="viewModel"
            type="com.krisbiketeam.smarthomeraspbpi3.viewmodels.HomeUnitMCP23017WatchDogDetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_hw_unit_name_layout"
            style="@style/LargeTitleDropDownOutlineInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/margin_normal"
            android:hint="@string/add_edit_home_unit_text_input_hw_unit_title"
            app:endIconDropDownEnabled="@{viewModel.isEditMode}"
            app:helperText="@string/add_edit_home_unit_text_room_spinner_prompt"
            app:helperTextEnabled="@{viewModel.isEditMode}"
            app:hintEnabled="true"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/input_hw_unit_name_spinner"
                style="@style/EnabledColorMaterialAutoCompleteTextViewStyle"
                android:clickable="@{viewModel.isEditMode}"
                android:focusable="@{true}"
                app:entriesAutoComplete="@{viewModel.inputHwUnitNameList}"
                app:entriesUsed="@{true}"
                app:entriesWithEmpty="@{true}"
                app:value="@={viewModel.inputHwUnitName}" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- WatchDog delay -->
        <androidx.constraintlayout.widget.Group
            android:id="@+id/watch_dog_delay_group"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clickable="@{safeUnbox(viewModel.isEditMode) ? true : false}"
            app:constraint_referenced_ids="watch_dog_delay_title,watch_dog_delay,circulation_timeout_title,circulation_timeout"
            app:layout_constraintBottom_toBottomOf="@+id/watch_dog_delay_title"
            app:layout_constraintTop_toTopOf="@+id/watch_dog_delay_title" />

        <!-- WatchDog delay title-->
        <TextView
            android:id="@+id/watch_dog_delay_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/margin_normal"
            android:text="@string/add_edit_home_unit_text_watch_dog_delay_title"
            android:textColor="@color/colorSecondary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input_hw_unit_name_layout" />

        <!-- WatchDog delay value -->
        <TextView
            android:id="@+id/watch_dog_delay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:hint="@string/add_edit_home_unit_text_watch_dog_delay_title"
            android:text="@{UtilsKt.getDayTime(viewModel.watchDogDelay)}"
            android:textColor="@color/design_default_color_on_secondary"
            app:layout_constraintBottom_toBottomOf="@+id/watch_dog_delay_title"
            app:layout_constraintStart_toEndOf="@+id/watch_dog_delay_title"
            app:layout_constraintTop_toTopOf="@+id/watch_dog_delay_title" />

        <!-- WatchDog timeout -->
        <androidx.constraintlayout.widget.Group
            android:id="@+id/watch_dog_timeout_group"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clickable="@{safeUnbox(viewModel.isEditMode) ? true : false}"
            app:constraint_referenced_ids="watch_dog_delay_title,watch_dog_delay,circulation_timeout_title,circulation_timeout"
            app:layout_constraintBottom_toBottomOf="@+id/watch_dog_delay_title"
            app:layout_constraintTop_toTopOf="@+id/watch_dog_delay_title" />

        <!-- WatchDog timeout title-->
        <TextView
            android:id="@+id/circulation_timeout_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/margin_normal"
            android:text="@string/add_edit_home_unit_text_watch_dog_timeout_title"
            android:textColor="@color/colorSecondary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/watch_dog_delay_title" />

        <!-- WatchDog delay value -->
        <TextView
            android:id="@+id/circulation_timeout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:hint="@string/add_edit_home_unit_text_watch_dog_timeout_title"
            android:text="@{UtilsKt.getDayTime(viewModel.watchDogTimeout)}"
            android:textColor="@color/design_default_color_on_secondary"
            app:layout_constraintBottom_toBottomOf="@+id/circulation_timeout_title"
            app:layout_constraintStart_toEndOf="@+id/circulation_timeout_title"
            app:layout_constraintTop_toTopOf="@+id/circulation_timeout_title" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>