<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.krisbiketeam.smarthomeraspbpi3.viewmodels.UnitTaskViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/unit_type_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/unit_task_text_name_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/unit_type_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/unit_type_title">

            <TextView
                android:id="@+id/unit_type_spinner_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@{viewModel.name}"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />
        </FrameLayout>

        <TextView
            android:id="@+id/room_name_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal"
            android:text="@string/unit_task_text_home_unit_name_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/unit_type_layout" />

        <FrameLayout
            android:id="@+id/room_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/room_name_title">

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/room_name_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:prompt="@string/unit_task_text_home_unit_select_spinner_prompt"
                android:spinnerMode="dialog"
                android:visibility="@{safeUnbox(viewModel.isEditMode) ? View.VISIBLE : View.GONE}"
                app:entries="@{viewModel.homeUnitNameList}"
                app:selectedValue="@={viewModel.homeUnitName}" />

            <TextView
                android:id="@+id/room_name_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@{viewModel.homeUnitName}"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:visibility="@{safeUnbox(viewModel.isEditMode) ? View.GONE : View.VISIBLE}" />
        </FrameLayout>

        <TextView
            android:id="@+id/hw_unit_name_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal"
            android:text="@string/unit_task_text_hw_unit_name_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/room_name_layout" />

        <FrameLayout
            android:id="@+id/hw_unit_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hw_unit_name_title">

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/hw_unit_name__spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:prompt="@string/unit_task_text_hw_unit_select_spinner_prompt"
                android:spinnerMode="dialog"
                android:visibility="@{safeUnbox(viewModel.isEditMode) ? View.VISIBLE : View.GONE}"
                app:entries="@{viewModel.hwUnitNameList}"
                app:selectedValue="@={viewModel.hwUnitName}" />

            <TextView
                android:id="@+id/hw_unit_name_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@{viewModel.hwUnitName}"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:visibility="@{safeUnbox(viewModel.isEditMode) ? View.GONE : View.VISIBLE}" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:visibility="@{safeUnbox(viewModel.showProgress) ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.v4.widget.ContentLoadingProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

        </FrameLayout>
    </android.support.constraint.ConstraintLayout>

</layout>