<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="java.lang.String" />

        <import type="androidx.navigation.Navigation" />

        <import type="com.krisbiketeam.smarthomeraspbpi3.ui.HomeUnitDetailFragmentDirections" />

        <variable
            name="viewModel"
            type="com.krisbiketeam.smarthomeraspbpi3.viewmodels.HomeUnitDetailViewModel" />
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context="com.krisbiketeam.smarthomeraspbpi3.ui.HomeUnitDetailFragment"
        tools:ignore="MergeRootFrame">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_bar_height"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:title="@{viewModel.name}"
                app:toolbarId="@+id/toolbar">

                <ImageView
                    android:id="@+id/detail_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/room_detail_image_content_description"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_foreground"
                    app:layout_collapseMode="parallax" />
                <!--app:imageFromUrl="@{viewModel.roomName.imageUrl}"-->

                <android.support.v7.widget.Toolbar
                    android:id="@+id/detail_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/room_detail_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_vertical_margin">

                <TextView
                    android:id="@+id/unit_type_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/add_edit_home_unit_text_unit_type_title"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <FrameLayout
                    android:id="@+id/unit_type_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/unit_type_title">

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/unit_type_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:prompt="@string/add_edit_home_unit_text_unit_type_spinner_prompt"
                        android:spinnerMode="dialog"
                        android:visibility="@{safeUnbox(viewModel.isEditMode) ? View.VISIBLE : View.GONE}"
                        app:entries="@{viewModel.typeList}"
                        app:selectedValue="@={viewModel.type}" />

                    <TextView
                        android:id="@+id/unit_name_title_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@{viewModel.type}"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:visibility="@{safeUnbox(viewModel.isEditMode) ? View.GONE : View.VISIBLE}" />
                </FrameLayout>

                <TextView
                    android:id="@+id/room_name_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:text="@string/add_edit_home_unit_text_room_title"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/unit_type_layout" />

                <FrameLayout
                    android:id="@+id/room_name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/room_name_title">

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/room_name_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:prompt="@string/add_edit_home_unit_text_room_spinner_prompt"
                        android:spinnerMode="dialog"
                        android:visibility="@{safeUnbox(viewModel.isEditMode) ? View.VISIBLE : View.GONE}"
                        app:entries="@{viewModel.roomNameList}"
                        app:selectedValue="@={viewModel.room}" />

                    <TextView
                        android:id="@+id/room_name_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@{viewModel.room}"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:visibility="@{safeUnbox(viewModel.isEditMode) ? View.GONE : View.VISIBLE}" />
                </FrameLayout>

                <TextView
                    android:id="@+id/hw_unit_name_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:text="@string/add_edit_home_unit_text_hw_unit_title"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/room_name_layout" />

                <FrameLayout
                    android:id="@+id/hw_unit_name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/hw_unit_name_title">

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/hw_unit_name__spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:prompt="@string/add_edit_home_unit_text_room_spinner_prompt"
                        android:spinnerMode="dialog"
                        android:visibility="@{safeUnbox(viewModel.isEditMode) ? View.VISIBLE : View.GONE}"
                        app:entries="@{viewModel.hwUnitNameList}"
                        app:selectedValue="@={viewModel.hwUnitName}" />

                    <TextView
                        android:id="@+id/hw_unit_name_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@{viewModel.hwUnitName}"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:visibility="@{safeUnbox(viewModel.isEditMode) ? View.GONE : View.VISIBLE}" />

                </FrameLayout>


                <FrameLayout
                    android:id="@+id/home_unit_name_value_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/hw_unit_name_layout">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="@{safeUnbox(viewModel.isEditMode) ? View.INVISIBLE : View.VISIBLE}">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/add_edit_home_unit_text_value"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

                        <TextView
                            android:id="@+id/home_unit_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{viewModel.value}"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="@{safeUnbox(viewModel.isEditMode) ? View.VISIBLE : View.INVISIBLE}">

                        <TextView
                            android:id="@+id/home_unit_name_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/add_edit_home_unit_text_name"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

                        <EditText
                            android:id="@+id/home_unit_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:hint="@string/add_edit_home_unit_text_title_hint"
                            android:importantForAutofill="no"
                            android:inputType="text"
                            android:maxLines="1"
                            android:text="@={viewModel.name}"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title" />
                    </LinearLayout>
                </FrameLayout>

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/home_unit_notify_firebase_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="@={viewModel.firebaseNotify}"
                    android:text="@string/add_edit_home_unit_notify_firebase_switch_text"
                    android:clickable="@{safeUnbox(viewModel.isEditMode) ? true : false}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/home_unit_name_value_layout" />

                <TextView
                    android:id="@+id/unit_task_list_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:text="@string/add_edit_home_unit_text_task_list_title"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/home_unit_notify_firebase_switch" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/unit_task_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_small"
                    android:adapter="@{viewModel.unitTaskListAdapter}"
                    android:clipToPadding="false"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/unit_task_list_title"
                    tools:listitem="@layout/fragment_home_unit_detail_unit_list_item" />


            </android.support.constraint.ConstraintLayout>

        </android.support.v4.widget.NestedScrollView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:visibility="@{safeUnbox(viewModel.showProgress) ? View.VISIBLE : View.GONE}">

            <android.support.v4.widget.ContentLoadingProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

        </FrameLayout>


    </android.support.design.widget.CoordinatorLayout>

</layout>